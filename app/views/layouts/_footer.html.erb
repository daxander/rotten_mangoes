<footer>
  <small>
  <% if current_user %>
    Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
      <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
  </small>
  <small>
    <% if current_user && current_user.admin? %>
        (<%= link_to "Admin Management", admin_users_path %>)
      <% end %>
  </small>
  <small>
  <% if session[:user_id].to_i != session[:actual_id] %>
      <%= link_to "Back to Admin", admin_preview_path(session[:actual_id]) %>
      <%end%>
  </small>

</footer>